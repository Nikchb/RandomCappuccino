@inherits LayoutComponentBase
@inject AuthenticationService authenticationService

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <div class="main">
        <div class="top-row px-4">
            @if(authenticationService.IsAuthenticated == false)
            {
                <NavLink class="nav-link" href="/sign-in">Sign In</NavLink>
                <NavLink class="nav-link" href="/sign-up">Sign Up</NavLink>
            }
            else
            {
                <NavLink class="nav-link" href="/sign-out">Sign Out</NavLink>                
            }            
        </div>        
        <div class="content px-4">
            <div class="row">
                <div class="col-10">
                    @Body
                </div>
                <div class="col-2">
                    <MessageList/>
                </div>
            </div>
            
            
        </div>
    </div>
</div>