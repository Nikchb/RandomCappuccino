@inherits LayoutComponentBase
@inject AuthenticationService authenticationService


<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
        <NavLink class="navbar-brand" href="/">Random Cappuccino</NavLink>        
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ms-auto mb-2 mb-lg-0">                                            
                @if(authenticationService.IsAuthenticated == false)
                {
                    <li class="nav-item">
                        <NavLink class="nav-link active" href="/sign-in">Sign In</NavLink>
                    </li>         
                    <li class="nav-item">
                        <NavLink class="nav-link active" href="/sign-up">Sign Up</NavLink>
                    </li>                            
                }
                else
                {
                    <li class="nav-item">
                        <NavLink class="nav-link active" href="/account">Account</NavLink>   
                    </li>  
                    <li class="nav-item">
                        <NavLink class="nav-link active" href="/groups">Groups</NavLink>   
                    </li>  
                    <li class="nav-item">
                        <NavLink class="nav-link active" href="/sign-out">Sign Out</NavLink>   
                    </li>             
                }                    
            </ul>
        </div>
    </div>
</nav> 

<div class="container-xxl"> 
    <br />
    <div class="row">
        <div class="col-lg-10">
            @Body
        </div>
        <div class="col-lg-2">
            <MessageList/>
        </div>
    </div>                       
</div>
