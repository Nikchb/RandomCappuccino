@page "/sign-up"
@inherits BasePage

<h3>Sign Up</h3>

<MessageList Messages=messages  />

<div class="row">
    <div class="col-lg-4">
        <div class="form-group">
            <label>Email</label>
            <input class="form-control" @bind="Email" />
        </div>
        <div class="form-group">
            <label>Password</label>
            <input class="form-control" @bind="Password" />
        </div>
        <button class="form-control" @onclick="SignUpAsync">Sign Up</button>
    </div>
</div>
