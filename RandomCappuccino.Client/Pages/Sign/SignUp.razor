@page "/sign-up"

<h3>Sign Up</h3>

<div class="row">
    <div class=col-6>
        <div class="form-group">
            <label>Email</label>
            <input class="form-control" @bind="Email" />
        </div>
        <div class="form-group">
            <label>Password</label>
            <input class="form-control" @bind="Password" />
        </div>
        <button @onclick="SignUpAsync">Sign Up</button>
    </div>
</div>
