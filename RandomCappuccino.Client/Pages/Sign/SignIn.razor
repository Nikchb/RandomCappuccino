@page "/sign-in"
@inherits BasePage

<h3>Sign In</h3>

<div class="row">
    <div class="col-lg-6">
        
        <div class="form-group">
            <label>Email</label>
            <input class="form-control" @bind="Email" />
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" @bind="Password" />
        </div>
        <button class="form-control" @onclick="SignInAsync">Sign In</button>
    </div>
</div>

